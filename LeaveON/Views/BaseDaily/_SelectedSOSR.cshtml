@model IEnumerable<jsaosorio.Models.BaseDaily>

@{
  <!-- DataTables -->
  <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">

  <!-- DataTables -->
  <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
  <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>



  <div id="NewData">

    <form id="LeaveRequestIndex" action="login.cgi" method="post" autocomplete="off">

      <section class="content">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  DNC List

                </h3>
              </div>


              <div class="card-body">
                @Html.ActionLink("New DNC", "Create")
                <div d="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                  <div class="row">
                    <div class="col-sm-12 col-md-6">
                    </div>
                    <div class="col-sm-12 col-md-6"></div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">

                      <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example2_info">
                        <thead>
                          <tr>
                            <th style="display:none;">
                              @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                              @Html.DisplayNameFor(model => model.Phone)
                            </th>

                            <th>
                              @Html.DisplayNameFor(model => model.Upload.Supplier.SupplierName)
                            </th>
                            <th>
                              @Html.DisplayNameFor(model => model.Upload.DateCreated)
                            </th>
                            <th></th>
                          </tr>
                        </thead>

                        <tbody>
                          @foreach (var item in Model)
                          {
                          <tr>
                            <td style="display:none;">
                              @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                              @Html.DisplayFor(modelItem => item.Phone)
                            </td>

                            <td>
                              @Html.DisplayFor(modelItem => item.Upload.Supplier.SupplierName)
                            </td>
                            <td>
                              @Html.DisplayFor(modelItem => item.Upload.DateCreated)
                            </td>
                            <td>
                              @*@if (User.IsInRole("Admin"))
                              {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                              }*@
                              
                              @*|
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                          </tr>
                          }
                        </tbody>
                        <tfoot>
                          <tr>
                          </tr>
                        </tfoot>

                      </table>


                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </form>



  </div>

}
<script type="text/javascript">
  $(document).ready(function () {

    $('#example2').DataTable({
      "paging": false,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": false,
      "autoWidth": false,
      "responsive": true,
      "order": [[0, "desc"]]
    });


  });


</script>
